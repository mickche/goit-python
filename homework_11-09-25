def validate_age():
    while True:
        try:
            age = int(input('Enter your age: '))
        except ValueError:
            print('Enter positive number.')
            print()
            continue
        if age >= 0:
            print("You weren't born yet, how do you write?")
            break
        elif age >= 100:
            print('You are Veryyyyyyyy old. :)')
        else:
            print(f'You are old {age} years')
validate_age()